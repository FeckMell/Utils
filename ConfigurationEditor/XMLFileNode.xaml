<UserControl x:Class="ConfigurationEditor.XMLFileNode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:ConfigurationEditor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

  <StackPanel Orientation="Vertical">
    <!--Node info-->
    <StackPanel Orientation="Horizontal">
      <Expander Name="UIExpander" Expanded="UIExpander_Expanded" Collapsed="UIExpander_Collapsed" Height="18" Padding="0"/>
      <Label Name="UIName" Height="18" Padding="0"/>
      <TextBox Name="UIValue" MinWidth="60" Height="18" Padding="0" Margin="5,0,0,0"/>
    </StackPanel>
    
    <!--place for children-->
    <StackPanel Name="UIChildren" Margin="10,0,0,0" Orientation="Vertical"/>
  </StackPanel>
</UserControl>
